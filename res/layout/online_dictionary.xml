<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     
    <ListView
        android:id="@+id/online_dictionary_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/online_dic_msg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_weight="0"
        android:text="@string/notice_conntection_failed"
        android:visibility="gone" />
    
    <Button
 	    android:id="@+id/online_download_sel_word"
 	    android:layout_width="match_parent"
		android:layout_height="match_parent"
 	    android:layout_weight="1"
 	    android:onClick="onlineDownloadSelWord"
 	    android:textColor="#ffffff"
 	    android:background="@drawable/download_word_btn"
 	    android:visibility="gone" />
 
</LinearLayout>